{
  "expo": {
    "name": "First Cast",
    "slug": "first-cast",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#003362"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.first.cast",
      "LSMinimumSystemVersion": "13.0",
      "minimumDeploymentTarget": "13.0",
      "NSLocationWhenInUseUsageDescription": "Allow Pick a Place to use your location to have a good starting point for fish locations. This is essential for the app to be functional.",
      "NSLocationAlwaysAndWhenInUseUsageDescription": "Allow Pick a Place to use your location to have a good starting point for fish locations. This is essential for the app to be functional."
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#003362"
      },
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.INTERNET"
      ],
      "package": "com.first.cast"
    },
    "web": {
      "favicon": "./assets/icon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location."
        }
      ]
    ]
  }
}
